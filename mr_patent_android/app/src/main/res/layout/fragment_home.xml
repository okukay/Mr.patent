<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- 상단 환영 메시지 -->
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:text="안녕하세요 "
        android:textSize="25dp"
        style="@style/customTitleFontStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="허동욱"
        android:textSize="25dp"
        android:textColor="@color/mr_blue"
        style="@style/customTitleFontStyle"
        app:layout_constraintStart_toEndOf="@+id/tv_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="님,"
        android:textSize="25dp"
        style="@style/customTitleFontStyle"
        app:layout_constraintStart_toEndOf="@+id/tv_username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/customTitleFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성 중인 특허가 있어요!"
        app:layout_constraintStart_toStartOf="@+id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <!-- 특허 목록 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_patents"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"/>

    <!-- 변리사 리스트 섹션 -->
    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="변리사 리스트"
        style="@style/customTitleFontStyle"
        app:layout_constraintStart_toStartOf="@+id/tv_subtitle"
        app:layout_constraintTop_toBottomOf="@id/rv_patents" />

    <!-- 필터 태그 -->
    <HorizontalScrollView
            android:id="@+id/hsv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title2">
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        style="@style/CustomChipChoice"
        app:layout_constraintTop_toBottomOf="@id/tv_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:chipSpacing="10dp"
        app:checkedChip="@+id/chip_chemi"
        android:paddingStart="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_chemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="100dp"
            android:text="화학공학" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_mecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기계공학" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="100dp"
            android:text="생명공학" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_elec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="100dp"
            android:text="전기/전자" />

    </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
<!--     변리사 리스트 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_patent_attorneys"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"

        android:layout_marginTop="10dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsv_filter" />

</androidx.constraintlayout.widget.ConstraintLayout>
