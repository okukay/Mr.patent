<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.join.JoinProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h3_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h4_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v3_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v4_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <TextView
        style="@style/customTitleFontStyle"
        android:id="@+id/tv_profile_exp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center_horizontal"
        android:text="프로필 사진을 등록해주세요."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/v4_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/v1_guideline"
        app:layout_constraintTop_toTopOf="@id/h1_guideline" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:background="@drawable/circle_shape"
        android:src="@drawable/user_profile"
        app:layout_constraintBottom_toBottomOf="@id/h3_guideline"
        app:layout_constraintEnd_toEndOf="@id/v3_guideline"
        app:layout_constraintStart_toStartOf="@id/v2_guideline"
        app:layout_constraintTop_toTopOf="@id/h2_guideline" />

    <TextView
        android:id="@+id/tv_profile_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_profile_register"
        android:textSize="18sp"
        android:textColor="@color/mr_gray_dark"
        app:layout_constraintTop_toTopOf="@id/h3_guideline"
        app:layout_constraintStart_toStartOf="@id/v2_guideline"
        app:layout_constraintEnd_toEndOf="@id/v3_guideline"/>

    <Button
        android:id="@+id/btn_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="지금은 넘어갈게요."
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mr_gray_light"
        app:layout_constraintBottom_toTopOf="@id/btn_register"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="다  음"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mr_blue"
        app:layout_constraintTop_toTopOf="@id/h4_guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>