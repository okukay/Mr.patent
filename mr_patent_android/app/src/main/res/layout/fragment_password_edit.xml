<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mypage.PasswordChangeFragment">

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="0.07" />

    <TextView
        android:id="@+id/tv_password_change"
        style="@style/customTitleFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <View
        android:id="@+id/v_line_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/mr_gray_lighter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.16"
        app:layout_constraintWidth_percent="0.9" />

    <EditText
        android:id="@+id/et_password_current"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_stroke"
        android:padding="8dp"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/icon_lock"
        android:drawablePadding="4dp"
        android:hint="현재 비밀번호"
        android:textColorHint="@color/mr_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.86" />

    <TextView
        android:id="@+id/tv_password_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 중인 비밀번호를 입력해주세요."
        android:textColor="@color/mr_gray_dark"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_password_current"
        app:layout_constraintTop_toBottomOf="@+id/et_password_current"
        app:layout_constraintVertical_bias="0.02"/>

    <EditText
        android:id="@+id/et_password_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_stroke"
        android:padding="8dp"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/icon_lock"
        android:drawablePadding="4dp"
        android:hint="새 비밀번호"
        android:textColorHint="@color/mr_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        app:layout_constraintWidth_percent="0.86" />

    <TextView
        android:id="@+id/tv_password_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호를 입력해주세요. (특수문자 포함 8~16자)"
        android:textColor="@color/mr_gray_dark"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_password_new"
        app:layout_constraintTop_toBottomOf="@+id/et_password_new"
        app:layout_constraintVertical_bias="0.02"/>

    <EditText
        android:id="@+id/et_password_new_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_stroke"
        android:padding="8dp"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/icon_lock"
        android:drawablePadding="4dp"
        android:hint="새 비밀번호 확인"
        android:textColorHint="@color/mr_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46"
        app:layout_constraintWidth_percent="0.86" />

    <TextView
        android:id="@+id/tv_password_new_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호를 한번 더 입력해주세요."
        android:textColor="@color/mr_gray_dark"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_password_new_confirm"
        app:layout_constraintTop_toBottomOf="@+id/et_password_new_confirm"
        app:layout_constraintVertical_bias="0.02"/>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mr_blue"
        android:text="변경하기"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61"
        app:layout_constraintWidth_percent="0.82" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_change_next"
        android:textColor="@color/mr_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.016"/>
</androidx.constraintlayout.widget.ConstraintLayout>