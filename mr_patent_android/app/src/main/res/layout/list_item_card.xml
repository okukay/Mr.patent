<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_item_card">

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/flash_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flipOnTouch="true"
        app:flipEnabled="true"
        app:flipDuration="400"
        android:padding="10dp"
        app:flipFrom="right"
        app:flipType="horizontal"
        app:autoFlipBack="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!-- Back Layout Goes Here -->
        <include
            android:id="@+id/flash_card_word"
            layout="@layout/flash_card"/>

        <!-- Front Layout Goes Here -->
        <include
            android:id="@+id/flash_card_mean"
            layout="@layout/flash_card"/>

    </com.wajahatkarim3.easyflipview.EasyFlipView>



    <ToggleButton
        android:layout_margin="30dp"
        android:id="@+id/t_btn_bookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selector_bookmark"
        android:backgroundTint="@color/mr_red"
        app:layout_constraintEnd_toEndOf="@+id/flash_card"
        app:layout_constraintTop_toTopOf="@+id/flash_card"
        android:text=""
        android:textOff=""
        android:textOn=""/>
</androidx.constraintlayout.widget.ConstraintLayout>