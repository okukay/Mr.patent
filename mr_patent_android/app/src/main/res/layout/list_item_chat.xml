<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E9F0FF">


    <!-- 시간 구분선 -->
    <LinearLayout
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mr_gray_light"/>

        <TextView
            android:text="2025년 10월 10일"
            android:textSize="12sp"
            android:textColor="@color/mr_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mr_gray_light"/>
    </LinearLayout>
    

    <!-- 사용자 메시지 레이아웃 (오른쪽 정렬) -->
    <LinearLayout
        android:padding="10dp"
        android:gravity="end"
        android:id="@+id/ll_user_message"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/mr_blue"
            android:layout_gravity="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:20"/>
        </LinearLayout>
        <!-- 사용자 메시지 -->
        <TextView
            android:id="@+id/tv_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/my_speech"
            android:text="사용자 메시지"
            android:textSize="16sp"
            android:maxWidth="250dp"/>
    </LinearLayout>

    <!-- 상대방 메시지 레이아웃 (왼쪽 정렬) -->
    <LinearLayout
        android:padding="10dp"
        android:gravity="start"
        android:id="@+id/ll_other_message"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- 상대방 프로필 이미지 -->
        <ImageView
            android:id="@+id/profile_image_other"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_profile"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/mr_white"
            android:layout_gravity="center_vertical"/>


        <!-- 상대방 이름 -->
        <TextView
            android:id="@+id/other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상대방 이름"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <!-- 메시지 및 시간 -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 상대방 메시지 -->
            <TextView
                android:id="@+id/tv_other_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/other_speech"
                android:text="상대방 메시지"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:maxWidth="250dp"/>

            <!-- 상대방 메시지 시간 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
