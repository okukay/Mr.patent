<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/iv_patent_attorney"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_patent_attorney_name"
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:text="킹왕짱 변리사"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_patent_attorney"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_patent_attorney_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="언제나 고객만을 생각하는 킹왕짱 변리사입니다. 언제든지 편하게 문의 주세요."
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_patent_attorney_name"
        app:layout_constraintTop_toBottomOf="@id/tv_patent_attorney_name" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_patent_attorney_description"
        app:layout_constraintStart_toStartOf="@+id/tv_patent_attorney_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_patent_attorney_description">

        <TextView
            android:id="@+id/tv_field_chemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화학"
            android:paddingHorizontal="8dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/mr_blue"
            android:background="@drawable/outlined_button"/>

        <TextView
            android:id="@+id/tv_field_mecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기계"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="8dp"
            android:gravity="center"
            android:textColor="@color/mr_blue"
            android:background="@drawable/outlined_button"/>
        <TextView
            android:id="@+id/tv_field_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생명"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="8dp"
            android:gravity="center"
            android:textColor="@color/mr_blue"
            android:background="@drawable/outlined_button"/>
        <TextView
            android:id="@+id/tv_field_elec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전기/전자"
            android:layout_marginEnd="5dp"
            android:paddingHorizontal="8dp"
            android:gravity="center"
            android:textColor="@color/mr_blue"
            android:background="@drawable/outlined_button"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
