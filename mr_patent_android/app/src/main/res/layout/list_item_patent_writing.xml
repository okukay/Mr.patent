<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:padding="12dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/tv_patent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="더블버블빨대"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_date_save_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="최근 저장 일시: "
        android:textSize="14sp"
        android:textColor="@color/mr_gray"
        app:layout_constraintStart_toStartOf="@+id/tv_patent_title"
        app:layout_constraintTop_toBottomOf="@id/tv_patent_title" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/tv_patent_exp"
        android:textSize="16sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date_save_recent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>